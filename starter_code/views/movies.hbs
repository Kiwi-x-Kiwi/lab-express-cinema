<div class="movies-container">
  <h1>Ironhack Cinema</h1>
  <p>Click on the movie to check the showtimes!</p>
  <div class="cards-container">
    {{#each movies}}
      <div class="movie-card">
        <img src="{{image}}">
        <p><strong>{{title}}</strong></p>
        <a href="/movies/{{id}}">See More</a>
      </div>
    {{/each}}
  </div>
</div>
